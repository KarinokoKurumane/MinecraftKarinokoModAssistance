<Window x:Class="MinecraftKarinokoModAssistance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinecraftKarinokoModAssistance"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="874" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="Lbx_NeedMods" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,43,584,10"/>
        <Label Content="Brakujące mody:" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Width="206"/>
        <Button x:Name="Btn_LoadSerwerListMods" Content="Wczytaj listę modów serwera" HorizontalAlignment="Left" Margin="297,45,0,0" VerticalAlignment="Top" Width="194" Click="Btn_LoadSerwerListMods_Click"/>
        <Button x:Name="Btn_VerifyMods" Content="Zweryfikuj posiadane mody" HorizontalAlignment="Left" Margin="297,95,0,0" VerticalAlignment="Top" Width="194" Click="Btn_VerifyMods_Click"/>
        <Button x:Name="Btn_SetModsDirectory" Content="Ustal lokacje modów" HorizontalAlignment="Left" Margin="297,10,0,0" VerticalAlignment="Top" Width="194" Click="Btn_SetModsDirectory_Click"/>
        <TextBox x:Name="Tbx_ModsDirectory" HorizontalAlignment="Left" Margin="496,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" Height="20"/>
        <Button x:Name="Btn_ModsDownloadDirectory" Content="Ustal lokacje pobierania" HorizontalAlignment="Left" Margin="297,143,0,0" VerticalAlignment="Top" Width="194" Click="Btn_ModsDownloadDirectory_Click"/>
        <Button x:Name="Btn_MoveMods" Content="Przenieś mody" HorizontalAlignment="Left" Margin="297,179,0,0" VerticalAlignment="Top" Width="194"/>
        <TextBox x:Name="Tbx_ModsDownloadDirectory" HorizontalAlignment="Left" Margin="496,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" Height="20"/>
        <TextBlock x:Name="Tbl_LoadedListData" HorizontalAlignment="Left" Margin="496,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="370"/>
        <Button x:Name="Btn_LoadOwnListMods" Content="Wczytaj listę modów posiadanych" HorizontalAlignment="Left" Margin="297,70,0,0" VerticalAlignment="Top" Width="194" Click="Btn_LoadOwnListMods_Click"/>
        <TextBlock x:Name="Tbl_LoadedOwnListData" HorizontalAlignment="Left" Margin="496,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="370"/>
    </Grid>
</Window>
